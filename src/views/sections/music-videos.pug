+b.SECTION.gallery
	.container
		+b.group._inline
			+e.H3.title
				span Music
				br
				| Videos
			+e.P.description Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
	+e.row.flex
		+e.item._fluid
			+e.IFRAME.item-video(src='https://www.youtube.com/embed/6v2L2UGZJAM?rel=0&ampshowinfo=0' frameborder="0" allow="autoplay; encrypted-media" allowfullscreen)
		each song in music
			+e.item._default
				+e.A.item-link(data-action="modal" data-video='https://www.youtube.com/embed/'+song.video+'?rel=0&amp;showinfo=0&amp;autoplay=1' data-open="#modal-music-video-" + song.id)
				+e.item-background(src=song.image)
				+e.item-content
					+e.P.item-content-title=song.title
					+e.P.item-content-link
						+e.I.item-content-link-icon
						+e.SPAN.item-content-link-text Click here for details
				+b.modal(id='modal-music-video-'+song.id+'')
					+e.box._medium.container
						+e.header
							+e.P.title=song.title
							+e.BUTTON.close(data-close="modal") &times;
						+e.video
						+e.body
							.row
								+e.body-column.col-12.col-sm-7
									+e.P.body-title Project details
									+e.body-content
										p=song.details
								+e.body-column.col-12.col-sm-5
									+e.P.body-title What was used
									+e.body-content
										ul
											each tool in song.tools
												li=tool
	+e.footer
		+b.A.btn._border-brand-2.effect._bounce-top(href="#") View more